.MODEL SMALL
.DATA

x db 2,4,6,8
lx equ $-x
y db 1,3,5,7,9
ly equ $-y

A db 7
B db 5

TX db ?
TY db ?

.CODE

mov ax , @data
mov ds , ax

mov ah , A
mov al , B
mov cx , 0

cmp ah , al
jg BYK
jl KCK

SON: mov TX , bh
mov TY , bl
hlt

BYK: add bh , x[si]
inc si
dec ch
jnz BYK
jmp SON


KCK: add bl , y[si]
inc si
dec cl
jnz KCK
jmp SON




